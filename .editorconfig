# Top-most EditorConfig file
root = true

[*.cs]

##############
# Code Style #
##############

# Avoid 'this.' prefix
dotnet_style_qualification_for_field = false:none
dotnet_style_qualification_for_property = false:none
dotnet_style_qualification_for_method = false:none
dotnet_style_qualification_for_event = false:none

# Expression-bodied members
csharp_style_expression_bodied_methods = false:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion

# Require braces for control blocks
csharp_prefer_braces = true:error

# Var preferences
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:warning

# Modifier ordering (e.g., public static readonly)
csharp_preferred_modifier_order = public, protected, internal, private, static, readonly, abstract, virtual, sealed, override, unsafe, async:warning

#########################
# Null Safety & Quality #
#########################

# Enforce null checks on public methods
dotnet_diagnostic.CA1062.severity = warning

# Encourage use of ?. and ??
dotnet_style_null_propagation = true:warning
dotnet_style_coalesce_expression = true:warning

##############
# Formatting #
##############

indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

##########################
# Using Directive Rules  #
##########################

# Enforce alphabetic ordering
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

######################
# Naming Conventions #
######################

# Require _underscore for private fields
dotnet_diagnostic.SA1309.severity = error

# Public members PascalCase
dotnet_naming_rule.public_members_should_be_pascal_case.severity = warning
dotnet_naming_rule.public_members_should_be_pascal_case.symbols = public_symbols
dotnet_naming_rule.public_members_should_be_pascal_case.style = pascal_case_style

dotnet_naming_symbols.public_symbols.applicable_accessibilities = public
dotnet_naming_symbols.public_symbols.applicable_kinds = property, method, field, event
dotnet_naming_symbols.public_symbols.required_modifiers = 

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

#########################
# StyleCop Preferences  #
#########################

# Disable noisy StyleCop rules
dotnet_diagnostic.SA1200.severity = none      # Using placement
dotnet_diagnostic.SA1402.severity = none      # One type per file
dotnet_diagnostic.SA1633.severity = none      # File header
dotnet_diagnostic.SA1121.severity = none      # Use built-in types
dotnet_diagnostic.SA1600.severity = suggestion # Missing XML docs

# Keep useful rules
dotnet_diagnostic.SA1101.severity = none      # 'this.' prefix — explicitly disabled
dotnet_diagnostic.SA1300.severity = warning   # Identifier casing
dotnet_diagnostic.SA1500.severity = warning   # Braces must not share line

# Enforce file name to match class name
dotnet_diagnostic.SA1649.severity = error

# Enforce one type per file
dotnet_diagnostic.SA1402.severity = error

# Require class members — at least a comment or a constructor.
dotnet_diagnostic.SA1501.severity = warning   # Braces must not be on same line
dotnet_diagnostic.SA1600.severity = warning   # Require XML documentation